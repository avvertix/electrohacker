  "author": {
    "name": "Alessio Vertemati",
    "email": "alessio@avsoft.it",
    "url": "https://github.com/avvertix"
  },
  "repository": {
    "type": "git",
    "url": "avvertix/electrohacker"
  },
  "license": "MIT",
  "main": "main.js",
  "dependencies": {
    "ity": "*",
    "lodash": "^4.5.0",
    "pintsize": "alistairtweedie/pintsize"
